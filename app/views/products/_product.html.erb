<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= product.name %></strong> <small>$<%= product.price%></small>  <small><%= product.category.name%></small>
          <br>
          <%= product.description%>
        </p>
      </div>
    </div>
  </article>
</div>