        <div class="navbar-menu">
          <div class="navbar-start">
            <a class="navbar-item" href="/">
              Home
            </a>
            <a class="navbar-item" href="/products">
              Products
            </a>
            <a class="navbar-item" href="/categories">
              Categories
            </a>
            <a class="navbar-item" href="/">
              Sale
            </a>
            <a class="navbar-item" href="/">
              New Products
            </a>
          </div>
        </div>
      </nav>
    <%= yield %>
  </body>
</html>
